    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진받아오기"
            android:background="@color/bg"
            android:drawableTop="@drawable/receive"
            android:id="@+id/viewBtn"
            android:src="@drawable/receive"
            android:layout_centerHorizontal="true"
            style="@style/AppTheme"
            android:layout_gravity="right" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진찍기"
            android:id="@+id/bn"
            android:background="@color/bg"
            android:drawableTop="@drawable/takephoto"
            android:layout_below="@+id/img"
            android:layout_alignLeft="@+id/uploadBtn"
            android:layout_alignStart="@+id/uploadBtn"
            android:adjustViewBounds="false"
            android:longClickable="false"
            android:padding="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="올린사진보기"
            android:id="@+id/myPicBtn"
            android:src="@drawable/gallery"
            android:background="@color/bg"
            android:drawableTop="@drawable/gallery"
            style="@style/AppTheme"
            android:layout_below="@+id/bn"
            android:layout_alignLeft="@+id/bn4"
            android:layout_alignStart="@+id/bn4"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:background="@color/bg"
            android:drawableTop="@drawable/photosharing"
            android:id="@+id/logoutPage"
            style="@style/AppTheme"
            android:baselineAlignBottom="false"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bn3"
            android:layout_weight="10.71" />
    </LinearLayout>


</LinearLayout>